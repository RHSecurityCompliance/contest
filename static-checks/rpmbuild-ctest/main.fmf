summary: Builds from source and runs ctest
test: python3 -m lib.runtest ./test.py
result: custom
environment+:
    PYTHONPATH: ../..
duration: 2h
require+:
  - rpm-build
  - cmake
  - python3-jinja2
  - python3-devel
  - python3-pip
  - python3-setuptools
  - gcc-c++
recommend+:
  - dnf-utils
  - yum-utils
  - yum-builddep
  - ansible-core
  - rhc-worker-playbook
  - bats
adjust:
  - when: arch == aarch64 and rhel == 9.0
    enabled: false
    because: rhc-worker-playbook or community.general collection not available there
