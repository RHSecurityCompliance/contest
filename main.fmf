require:
  - openscap-scanner
  - scap-security-guide
  - type: file
    pattern: /lib
  - type: file
    pattern: /conf

# shared by all tests
recommend:
  - python3
  - python36
  - python3-requests
  - python36-requests
  - python3-rpm
  - python36-rpm
component:
  - scap-security-guide

# don't test for SELinux AVCs in Beaker
environment:
    AVC_ERROR: +no_avc_check
